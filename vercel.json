{
  "version": 2,
  "builds": [
    {
      "src": "public/index.html",
      "use": "@vercel/static-build",
      "config": { "includeFiles": ["public/**"] }
    },
    {
      "src": "src/index.js",
      "use": "@vercel/react",
      "config": { "outputDirectory": "build" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
